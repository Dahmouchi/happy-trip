generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}
enum TravelType {
  NATIONAL
  INTERNATIONAL
  EN_MESURE
}

enum DestinaionType {
  NATIONAL
  INTERNATIONAL
}

model Destination {
  id          String @id @default(cuid())
  name        String @unique
  type        DestinaionType @default(NATIONAL)
  imageUrl    String
  tours       Tour[] @relation("TourDestinations") // Relation field for many-to-many with Tour
}

model Category {
  id          String @id @default(cuid())
  name        String @unique
  description String?
  imageUrl    String
  tours       Tour[] @relation("CategoryTours") // Relation field for many-to-many with Tour
}

model Nature {
  id          String @id @default(cuid())
  name        String @unique
  description String?
  imageUrl    String
  tours       Tour[] @relation("NatureTours") // Relation field for many-to-many with Tour
}

model Landing {
  id           String @id @default(cuid())
  navbar       Boolean @default(true)
  search       Boolean @default(true)
  hero         Boolean @default(true)
  national     Boolean @default(true)
  international Boolean @default(true)
  mesure       Boolean @default(true)
  reviews      Boolean @default(true)
  meeting      Boolean @default(true)
  expert       Boolean @default(true)
  trust        Boolean @default(true)
  footer       Boolean @default(true)
}

model Program {
  id          String @id @default(cuid())
  title       String
  description String?
  imageUrl    String?
  tourId      String
  tour        Tour @relation("TourPrograms", fields: [tourId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Tour {
  id                 String   @id @default(cuid())
  title              String
  description        String?
  type               TravelType @default(NATIONAL)
  priceOriginal      Int?
  priceDiscounted    Int?
  advancedPrice     Int? // e.g., 1000 for 1000€
  dateCard           String? //this date for card view
  durationDays       Int?
  durationNights     Int?
  googleMapsUrl            String? // URL to an interactive map
  imageUrl           String?
  inclus              String?
  exclus             String?
  groupType          String?     // e.g., "Petit groupe"
  groupSizeMax       Int?        // e.g., 12

  showReviews        Boolean  @default(true)
  showDifficulty     Boolean  @default(true)
  showDiscount       Boolean  @default(true)

  difficultyLevel    Int?     // 1 to 5
  totalReviews       Int      @default(0)
  averageRating      Float    @default(0.0)
  discountPercent    Int?     // e.g. 10 for 10%
  accommodationType    String?  // e.g., "Hôtel", "Auberge", "Camping"
  programs          Program[] @relation("TourPrograms")
  dates              TourDate[]
  destinations        Destination[] @relation("TourDestinations")
  categories          Category[] @relation("CategoryTours")
  natures             Nature[] @relation("NatureTours")
  images             File[]
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model File {
  id        Int      @id @default(autoincrement())
  tourId    String
  url       String   // The URL of the file stored in Cloudflare or another storage
  tour      Tour    @relation(fields: [tourId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

